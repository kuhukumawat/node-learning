doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href=" /css/main.css") 
        title #{productTitle}
    body 
        header
            nav
                ul
                    li 
                        a(href="/") Shop
                    li 
                        a.active(href="/add-product") Add Product

    main 
        h1 #{productTitle}
             form(action="/add-product", method="POST")
                 input(type="text", name="title", placeholder="Enter product title")
                 input(type="text", name="price", placeholder="Enter product price")
                 textarea(name="description", placeholder="Enter product description", rows="5")
                 input(type="text", name="imageUrl", placeholder="Enter product link")
                 button(type="submit") Add Product

                           